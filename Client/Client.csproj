<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <RootNamespace>AutomateDesign.Client</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Page Remove="HomeView.xaml" />
    <Page Remove="LoginView.xaml" />
    <Page Remove="ResetPasswordView.xaml" />
    <Page Remove="SignUpView.xaml" />
    <Page Remove="VerificationView.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.24.4" />
    <PackageReference Include="Grpc.Net.Client" Version="2.57.0" />
    <PackageReference Include="Grpc.Tools" Version="2.58.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Page Include="App.xaml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\Core.csproj" />
  </ItemGroup>

	<ItemGroup>
		<Protobuf Include="../Protos/helpers.proto" GrpcServices="Client" />
		<Protobuf Include="../Protos/users.proto" GrpcServices="Client" />
	</ItemGroup>

</Project>
