<local:DiagramShape x:Class="AutomateDesign.Client.View.Controls.DiagramShapes.DiagramTransition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomateDesign.Client.View.Controls.DiagramShapes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Line x:Name="line"
              Stroke="Black"
              StrokeThickness="3" />

        <Label x:Name="eventLabel"
               Background="White"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="{Binding Path=TriggeredBy.DisplayName}"/>

    </Grid>
</local:DiagramShape>
