<UserControl x:Class="AutomateDesign.Client.View.Controls.MenuUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomateDesign.Client.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>
        <Button Name="ProfilButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="50" Grid.Column="2" Click="ProfilButton_Click">
            <Image Source="/Resources/Icons/circle-user.png" Height="40" Width="40"/>
        </Button>

        <!-- Popup pour le menu du profil -->

        <Popup x:Name="ProfilMenu" StaysOpen="False" IsOpen="False" PlacementTarget="{Binding ElementName=ProfilButton}" Placement="Bottom">
            <Border BorderBrush="Black" BorderThickness="1" Background="White">
                <StackPanel>
                    <MenuItem Name="emailLabel"/>
                    <MenuItem Header="Changer mot de passe" Click="ChangePwdButton"/>
                    <MenuItem Header="Se Déconnecter" Click="LogOutButton"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
