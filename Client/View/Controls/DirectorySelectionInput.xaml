<UserControl x:Class="AutomateDesign.Client.View.Controls.DirectorySelectionInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutomateDesign.Client.View.Controls"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0"
                 Style="{StaticResource TextInput}" x:Name="input"
                 Text="{Binding Path, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <Button Grid.Column="1"
                Style="{StaticResource NormalButton}"
                Margin="20 0 0 0" x:Name="browseButton" Click="BrowseButtonClick">
            Parcourir...
        </Button>
    </Grid>
</UserControl>
