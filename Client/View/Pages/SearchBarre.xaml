<UserControl x:Class="AutomateDesign.Client.View.Pages.SearchBarre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomateDesign.Client.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="500">
    <Grid>
        <!-- Contenu de la page de recherche -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Center" 
            Margin="3,0,0,0" Height="18" Width="18" Click="SearchAutomate">
            <Image Source="/Resources/Icons/search.png" Width="12" RenderTransformOrigin="0.1,0.55"/>
        </Button>
        <TextBox x:Name="TextBoxRecherche"
             Width="auto" Height="auto" MaxLength="50"
             VerticalAlignment="Center" 
             Text="Rechercher" 
             GotKeyboardFocus="HaveFocusRecherche" LostFocus="LostFocusRecherche" Margin="26,0,26,0"
    />
        <Button HorizontalAlignment="Right" VerticalAlignment="Center" 
            Margin="0,0,0,0" Height="18" Width="18" Click="DeleteSearchButtonClick">
            <Image Source="/Resources/Icons/cross-small.png" />
        </Button>
    </Grid>
</UserControl>
