<Page x:Class="AutomateDesign.Client.View.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutomateDesign.Client.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,40,0,0" 
                   TextWrapping="Wrap" Text="PAGE DE CONNEXION" FontSize="25" 
                   />

        <Label Grid.Row="1" Grid.Column="1" 
               Content="Adresse Mail : " FontSize="18" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="33,50,0,0" 
               />
        <TextBox x:Name="emailBox" 
                 Grid.Row="1" Grid.Column="1"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="158,54,0,0" 
                 TextWrapping="Wrap" FontSize="18" 
                 Width="210"
                 />
        <Label Grid.Row="1" Grid.Column="1" 
               Content="Mot de Passe :" FontSize="18" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="28,100,0,0" 
               />
        <PasswordBox x:Name="passBox" 
                     Grid.Row="1" Grid.Column="1" 
                     DataContext="{}" 
                     HorizontalAlignment="Left" VerticalAlignment="Top"
                     Margin="158,104,0,0" 
                     FontSize="18"  
                     Width="210"
                     />
        <Button Grid.Column="1"  Grid.Row="2"
                Background="Transparent" BorderThickness="0"
                Content="Pas encore inscrit ?"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="212,10,0,0" 
                Click="pasInscritButtonClick"
                />
        <Button Grid.Column="1"  Grid.Row="2"
                Background="Transparent" BorderThickness="0"
                Content="Mot de passe oublié ?" 
                HorizontalAlignment="Left"  VerticalAlignment="Top" 
                Margin="82,10,0,0"
                Click="passwordOulbieButtonClick"
                />

        <Button Grid.Row="1" Grid.Column="1" 
                Content="Connexion" FontSize="18" 
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,156,0,0" 
                Click="ConnexionButtonClick" 
                RenderTransformOrigin="0.474,-2.05"
                />

    </Grid>
</Page>
