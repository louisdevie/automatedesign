<my:NavigablePage x:Class="AutomateDesign.Client.View.EditPasswordView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutomateDesign.Client.View"
      xmlns:my="clr-namespace:AutomateDesign.Client.View.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPasswordView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,40,0,0" 
                   TextWrapping="Wrap" Text="MODIFICATION MOT DE PASSE" 
                   FontSize="25" 
                   />

        <Label Name="messageErreurMDP"
               Grid.Column="1" Grid.RowSpan="2"
               Content="Mot de Passe Incorrect" 
               Visibility="Hidden" 
               FontSize="18" 
               HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,112,0,0" 
               />
        <Label Grid.Row="1" Grid.Column="1" 
               Content="Mot de Passe :" 
               FontSize="18" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="28,36,0,0" 
               />
        <PasswordBox x:Name="passBox"
                     Grid.Row="1" Grid.Column="1" 
                     DataContext="{}" 
                     HorizontalAlignment="Left" 
                     Margin="158,40,0,0" VerticalAlignment="Top" 
                     FontSize="18" 
                     Width="210"
                     />
        <Label Grid.Row="1" Grid.ColumnSpan="2"
               Content="Confirmer Mot de Passe :" 
               FontSize="18" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="144,86,0,0" 
               />
        <PasswordBox x:Name="passBoxConf"
                     Grid.Row="1" Grid.Column="1" 
                     HorizontalAlignment="Left" VerticalAlignment="Top"
                     Margin="158,90,0,0" 
                     FontSize="18"  
                     Width="210"
                     />
        <CheckBox x:Name="checkBoxButton" 
                  Grid.Column="1" Grid.Row="1" 
                  FontSize="16" 
                  Content="" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Margin="10,144,0,0" RenderTransformOrigin="0.62,-0.428"
                  IsChecked="{Binding Path=UserAgreement, Mode=TwoWay}"
                  />
        <TextBlock x:Name="checkBoxText"
                   Grid.Row="1" Grid.Column="1"
                   FontSize="16" 
                   HorizontalAlignment="Left"  VerticalAlignment="Top"
                   Margin="35,132,0,0" 
                   Height="Auto" Width="355"
                   TextWrapping="Wrap" Text="Vos données seront perdues en cas de réinitialisation de votre mot de passe." 
                   />

        <Button Grid.Row="1" Grid.Column="1" 
                Content="Confirmer" 
                FontSize="18" 
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,188,0,0"  
                Click="ConfirmerInscriptionButtonClick"
                />
    </Grid>
</my:NavigablePage>
